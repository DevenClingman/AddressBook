 <%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <% contact.errors.full_messages.each do |error| %>
      <%= alert_generator error %> 
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :contact_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :contact_phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Update", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
