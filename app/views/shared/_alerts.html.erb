<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Address Book", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Address Book", sticky: false) %> 
<% else %>
  <%= js add_gritter(flash[:notice], title: "Address Book", sticky: false) %> 
<% end %>